            android:name=".LoginActivity"
            android:label="Login"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >

        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Log Out"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />

    </application>

</manifest>
